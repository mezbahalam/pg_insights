/* Extensions */
.extension-changes {
  padding: var(--space-md);
}

.change-section {
  margin-bottom: var(--space-lg);
}

.change-section h4 {
  font-size: var(--text-sm);
  font-weight: 600;
  margin: 0 0 var(--space-sm) 0;
  color: var(--text);

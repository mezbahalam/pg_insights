.empty-comparison, .empty-metrics, .empty-config, .no-changes {
  text-align: center;
  padding: var(--space-xl);
  color: var(--text-muted);
}

.empty-icon {
  font-size: 32px;
  margin-bottom: var(--space-sm);
}

.empty-comparison h3 {
  font-size: var(--text-lg);
  font-weight: 600;
  margin: 0 0 var(--space-sm) 0;
  color: var(--text);
}

